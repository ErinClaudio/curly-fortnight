<h1>Sessions</h1>

<div class="container">
  <%= form_with url: sign_in_path do |form| %>
    <div class="mb-3">
      <%= form.label :email%><br>
      <%= form.text_field :email, class: "form_control", placeholder: "word@example.com" %>
    </div>

    <div class="mb-3">
      <%= form.label :password%><br>
      <%= form.password_field :password, class: "form_control", placeholder: "password"%><br>
      <%= link_to "forgot: your password?", password_reset_path %>
    </div>

    <div class="mb-3">
      <%= form.submit "Sign In", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
