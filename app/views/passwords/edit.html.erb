<h1>Edit password</h1>


<div class="container">
  <h5>Sign Up</h5>
    <%= form_with model: Current.user, url: edit_password_path do |form|%>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <% form.object.errors.full_messages.each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        <% end%>

        <div class="mb-3">
          <%= form.label :password%><br>
          <%= form.password_field :password, class: "form_control", placeholder: "password"%>
        </div>

        <div class="mb-3">
          <%= form.label :password_confirmation%><br>
          <%= form.password_field :password_confirmation, class: "form_control", placeholder: "password"%>
        </div>

        <div class="mb-3">
          <%= form.submit "Update Password", class: "btn btn-primary"%>
        </div>
    <% end %>
</div>
